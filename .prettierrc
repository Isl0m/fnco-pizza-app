{
	"arrowParens": "avoid",
	"trailingComma": "es5",
	"useTabs": true,
	"tabWidth": 2,
	"semi": false,
	"singleQuote": true,

	"importOrder": [
		"react(.*)",
		"<THIRD_PARTY_MODULES>",
		"(.*)/@(.*)/(.*)$",
		"^../(.*)",
		"^./(.*)"
	],
	"importOrderSeparation": true,
	"importOrderSortSpecifiers": true,

	"plugins": ["@trivago/prettier-plugin-sort-imports"],
	"pluginSearchDirs": false
}
